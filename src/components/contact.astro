---
import IntegratesWith from "./integrates-with.astro"
import ContactForm from "./contact-form.astro"
import Divider from "./divider.astro"
const phoneIcon =
	'<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="currentColor"><path d="M162-120q-18 0-30-12t-12-30v-162q0-13 9-23.5t23-14.5l138-28q14-2 28.5 2.5T342-374l94 94q38-22 72-48.5t65-57.5q33-32 60.5-66.5T681-524l-97-98q-8-8-11-19t-1-27l26-140q2-13 13-22.5t25-9.5h162q18 0 30 12t12 30q0 125-54.5 247T631-329Q531-229 409-174.5T162-120Zm556-480q17-39 26-79t14-81h-88l-18 94 66 66ZM360-244l-66-66-94 20v88q41-3 81-14t79-28Zm358-356ZM360-244Z"/></svg>'
const emailIcon =
	'<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="currentColor"><path d="M160-160q-33 0-56.5-23.5T80-240v-480q0-33 23.5-56.5T160-800h640q33 0 56.5 23.5T880-720v480q0 33-23.5 56.5T800-160H160Zm320-280L160-640v400h640v-400L480-440Zm0-80 320-200H160l320 200ZM160-640v-80 480-400Z"/></svg>'
const mapIcon =
	'<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="currentColor"><path d="m600-120-240-84-186 72q-20 8-37-4.5T120-170v-560q0-13 7.5-23t20.5-15l212-72 240 84 186-72q20-8 37 4.5t17 33.5v560q0 13-7.5 23T812-192l-212 72Zm-40-98v-468l-160-56v468l160 56Zm80 0 120-40v-474l-120 46v468Zm-440-10 120-46v-468l-120 40v474Zm440-458v468-468Zm-320-56v468-468Z"/></svg>'
---

<section
	id="contact"
	class="row contactRow bgPrimary"
>
	<div class="container dualCols rowReverse">
		<div class="col contentCol colorLight">
			<div class="heading hasFullStop">
				<div class="eyebrow">
					<span class="filled secondary">Contact</span>
					<span class="text light">Us Today</span>
				</div>
				<h2>Contact SyncVue Today</h2>
				<Divider />
				<p
					>Reach out today and one of our onboarding experts will guide you through the
					benefits of switching your business to SyncVue.</p
				>
			</div>
			<div class="contactItems">
				<a
					class="contactItem"
					href="tel:02033555615"
					target="_blank"
				>
					<div
						class="icon"
						set:html={phoneIcon}
					/>
					<div class="text">
						<div class="label">Phone</div>
						<div class="value">0203 355 5615</div>
					</div>
				</a>
				<a
					class="contactItem"
					href="mailto:info@syncvue.co.uk"
					target="_blank"
				>
					<div
						class="icon"
						set:html={emailIcon}
					/>
					<div class="text">
						<div class="label">Email</div>
						<div class="value">info@syncvue.co.uk</div>
					</div>
				</a>
				<a
					class="contactItem"
					href="https://maps.app.goo.gl/ozdbvVZArMykEkKr8"
					target="_blank"
				>
					<div
						class="icon"
						set:html={mapIcon}
					/>
					<div class="text">
						<div class="label">Address</div>
						<div class="value">6D Thane Works, London N7 7NU, United Kingdom</div>
					</div>
				</a>
			</div>
			<IntegratesWith />
		</div>
		<div class="col contactCol">
			<div class="formCol">
				<div class="heading centered">
					<h3>Contact Us</h3>
					<Divider />
					<p
						>Fill out the form below and our team will aim to respond within 24-48
						hours.</p
					>
				</div>
				<ContactForm />
			</div>
		</div>
	</div>
</section>
