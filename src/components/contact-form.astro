---
const sendIcon =
	'<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="currentColor"><path d="M120-160v-640l760 320-760 320Zm80-120 474-200-474-200v140l240 60-240 60v140Zm0 0v-400 400Z"/></svg>'
---

<form
	class="contactForm"
	action="https://api.web3forms.com/submit"
	method="POST"
>
	<input
		type="hidden"
		name="access_key"
		value="61e46238-61f5-431a-89cc-736354f1d55e"
	/>
	<input
		type="hidden"
		name="subject"
		value="New Contact Form Submission from Syncvue UK"
	/>
	<input
		type="hidden"
		name="from_name"
		value="Syncvue UK Contact Form"
	/>
	<div class="formItems">
		<div class="formItem">
			<input
				id="name"
				name="name"
				class="formInput"
				placeholder="Full Name*"
				type="text"
				required
				autocomplete="name"
				aria-label="Full Name Required"
			/>
		</div>
		<div class="formItem itemHalf">
			<input
				id="email"
				name="email"
				class="formInput"
				placeholder="Email*"
				type="email"
				required
				autocomplete="email"
				autocapitalize="off"
				pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
				aria-label="Email Required"
			/>
		</div>
		<div class="formItem itemHalf">
			<input
				id="phone"
				name="phone"
				class="formInput"
				placeholder="Phone*"
				type="tel"
				required
				autocomplete="tel"
				pattern="^\+?[1-9]\d{1,14}$"
				aria-label="Phone Number Required"
			/>
		</div>
		<div class="formItem">
			<select
				id="plan"
				name="plan"
				class="formInput"
				required
				aria-label="Select a plan"
			>
				<option value="">Select a plan</option>
				<option value="lite">Lite Plan</option>
				<option value="premium">Premium Plan</option>
				<option value="enterprise">Enterprise Plan</option>
			</select>
		</div>
		<div class="formItem">
			<textarea
				class="formInput"
				id="message"
				name="message"
				placeholder="Add some information about your business and requirements."
				required
				autocomplete="off"
				rows="6"
				aria-label="Message"
			></textarea>
		</div>
	</div>
	<div class="buttons centered">
		<button
			class="btn primary"
			type="submit"
		>
			<span>Send Message</span>
			<div
				class="icon"
				set:html={sendIcon}
			/>
		</button>
	</div>
</form>
